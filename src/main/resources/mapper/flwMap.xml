<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.moviecommu.repository.FollowingRepository">
   <insert id="save" parameterType="Flw">
       insert into following(userId,flwName)
       values(#{userId},#{flwName})
   </insert>

    <select id="findByFlw" parameterType="Flw" resultType="Integer">
        select count(*) from following where userId=#{userId} and flwName=#{flwName}
    </select>

    <delete id="deleteByFlw" parameterType="Flw">
        delete from following where userId=#{userId} and flwName=#{flwName}
    </delete>
</mapper>